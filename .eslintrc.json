{
  "extends": "@rocketseat/eslint-config/react",
  "rules": {
    "no-use-before-define": "off",
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "groups": [
          "internal",
          "external",
          "builtin",
          "unknown",
          ["parent", "sibling", "index"]
        ],
        "pathGroups": [
          {
            "pattern": "@/**",
            "group": "unknown"
          }
        ]
      }
    ]
  }
}